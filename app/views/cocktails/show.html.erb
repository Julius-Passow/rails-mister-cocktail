<div class="container">
  <div class="row">
    <h1><%= @cocktail.name %></h1>
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li>
          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to "Delete this ingredient", dose_path(dose), method: :delete, data: { confirm: "are you sure"}, class: "btn btn-warning btn-sm" %>
        </li>
         <% end %>
      </ul>
      <%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %>
      <%= link_to "Go back", cocktails_path, class: "btn btn-warning btn-sm" %>
    </div>
  </div>
</div>
